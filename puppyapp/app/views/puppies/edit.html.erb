<h1>Edit a puppy!</h1>

<% if @puppy.errors.any? %>
  <% @puppy.errors.full_messages.each do |error| %>
    <p class="text-danger">
      <%= error%>
    </p>
  <% end %>
<% end %>

<%= form_for @puppy, url: "/puppies/#{@puppy.id}" do |f|%>
<p>
  <%= f.label :name%>
  <%= f.text_field :name,  autofocus: true%>
</p>
<p>
  <%= f.label :age%>
  <%= f.number_field :age%>
</p>
<p>
  <%= f.label :breed%>
  <%= f.text_field :breed%>
</p>
<p>
  <%= f.submit%>
</p>
<% end %>

<%= link_to "Delete this puppy", "/puppies/#{@puppy.id}", method: "Delete", data: {confirm: "Seriously? Who deletes a puppy??"}%>